{
  "name": "@hebilicious/reproduire",
  "version": "0.0.9",
  "license": "MIT",
  "repository": "Hebilicious/reproduire",
  "private": true,
  "packageManager": "pnpm@8.8.0",
  "main": "./dist/index.cjs",
  "files": [
    "dist",
    "*.cjs"
  ],
  "scripts": {
    "build": "unbuild && ncc build -o action",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix",
    "release": "pnpm lint:fix && pnpm build && git add action/index.cjs && changelogen --release --push"
  },
  "devDependencies": {
    "@hebilicious/eslint-config": "0.0.3-beta.3",
    "@types/node": "^20.8.3",
    "@vercel/ncc": "^0.38.0",
    "changelogen": "^0.5.5",
    "eslint": "^8.51.0",
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "5.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
